<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onBoarding.OnBoardingFragment"
    android:id="@+id/fragment_on_boarding"
    android:background="@color/black">

    <ImageView
        android:id="@+id/frag_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/teal_white_gradient"/>


    <TextView
        android:id="@+id/tv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:fontFamily="@font/interextrabold"
        android:paddingHorizontal="40dp"
        android:text="Sign Language to Text"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="40dp"
        android:text="Translator"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tv_head"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frag_tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Sign Language Interpreter Applicaion"
        android:fontFamily="@font/intersemibold"
        android:textColor="@color/white_A700"
        android:textSize="20sp"
        android:paddingHorizontal="40dp"
        android:layout_marginBottom="180dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>