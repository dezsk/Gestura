<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onBoard.OnBoarding1Activity"
    android:background="@drawable/boy">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_gradient"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Sign Language Interpreter Applicaion"
        android:fontFamily="@font/intersemibold"
        android:textColor="@color/white_A700"
        android:textSize="20sp"
        android:paddingHorizontal="40dp"
        android:layout_marginBottom="250dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="An Application for learning and translating sign language. Helps to raise awareness of sign language knowledge for communicating with deaf individuals."
        android:fontFamily="@font/inter"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white_A700"
        android:layout_marginBottom="170dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="50dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:src="@drawable/filled_circle"
            app:tint="@color/teal_300"
            android:layout_marginHorizontal="10dp"/>

        <ImageView
            android:id="@+id/pt_2"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"
            app:tint="@color/white"
            android:layout_marginHorizontal="10dp"/>
        <ImageView
            android:id="@+id/pt_3"
            android:layout_width="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"
            app:tint="@color/white" />
        <ImageView
            android:id="@+id/pt_4"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"
            android:layout_marginHorizontal="10dp"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:fontFamily="@font/inter"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/arrow_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow"
            app:tint="@color/white_A700"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginEnd="10dp"
            android:scaleX="-1"
            android:src="@drawable/arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white_A700" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>